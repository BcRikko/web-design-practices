@charset "UTF-8"

@import "../../static/reset.css"
@import "./_base"

.content-section
    width 100vw
    height 100vh
    writing-mode vertical-rl

.header
    position relative
    writing-mode vertical-rl

    > .page-navigator
        position fixed
        top 0
        left 0
        width 80px
        height 100vh

        font-size 3.6rem
        line-height 80px

        > .menu
            margin 80px 0
            display flex
            justify-content space-between

            > li
                display inline-block

#main
    position relative

    > .title
        position absolute
        bottom 100px
        left 140px

        font-size 10.0rem
        letter-spacing 5px
        writing-mode initial
        width 600px

    > .lead
        position absolute
        top 100px
        right 140px

        font-size 11rem
        letter-spacing 12px
        line-height 14rem
