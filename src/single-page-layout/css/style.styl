@charset "UTF-8"

@import "../../static/reset.css"
@import "./base"

$color = #666666
$inverse-color = #ffffff

.container
    width 960px
    margin 0 auto

.inverse
    color $inverse-color
    background-color $color

.main
    height 680px

    & .page-navigator
        float right
        font-size 2.4rem
        margin-top 10px

        &::after
            clear both

        > .menu
            list-style none

            > li
                display inline-block
                padding 10px 20px
                text-align center

                position relative

                &::before
                    content ''
                    position absolute
                    bottom 0
                    left 50%

                    display block
                    width 0
                    transition all .3s ease

                &:hover::before
                    width 50%
                    border-bottom 2px solid $inverse-color

                &::after
                    content ''
                    position absolute
                    bottom 0
                    right 50%

                    display block
                    width 0
                    transition all .3s ease

                &:hover::after
                    width 50%
                    border-bottom 2px solid $inverse-color


    & .company-name
        padding-top 180px
        width 50%
        margin-left auto

        > .title
            font-size 9.2rem
            text-align right
            letter-spacing 7px

            > .-accent
                color #F20002

        > .lead
            margin-top 50px
            font-size 2.4rem
            text-align center


.content-section
    position relative
    padding 80px 0

    &::before
        $circle-size = 84px

        content '\00226B'
        display block
        position absolute
        top calc(84px / 2 * -1)
        left calc(50% - 84px / 2)

        height $circle-size
        width $circle-size
        border-radius 100%
        transform rotate(90deg)

        font-size 4.8rem
        line-height 78px
        text-align center

        color $color
        background-color $inverse-color
        z-index 1

    &.-inverse
        color $inverse-color
        background-color $color

    & .title
        width 280px
        margin 0 auto

        font-size 4.8rem
        text-align center
        padding-bottom 10px
        border-bottom 2px solid

#about
    height 960px


#works
    height 780px


#social
    height 460px

    & .icons
        list-style none
        display flex
        justify-content space-between
        margin-top 70px

        > .circle
            transition .5s
            transform rotateY(0deg)
            border-radius 50%

            &:hover
                transform rotateY(360deg)

            > a
                text-decoration none
                color $inverse-color

                > .icon
                    width 150px
                    height 150px
                    border-radius 50%
                    text-align center
                    vertical-align middle
                    line-height 150px
                    font-size 8.0rem

                    color $inverse-color
                    background-color $color

                    transition .7s

                    &.-blogger
                        $blogger = #ff5722
                        background-color $blogger

                        &:hover
                            color $blogger
                            background-color $inverse-color
                            border 5px solid $blogger

                    &.-twitter
                        $twitter = #5ea9dd
                        background-color $twitter
                        &::before
                            // AdBlock対策
                            content: "\f099";
                        &:hover
                            color $twitter
                            background-color $inverse-color
                            border 5px solid $twitter

                    &.-soundcloud
                        $soundcloud = #ff6c00
                        background-color $soundcloud

                        &:hover
                            color $soundcloud
                            background-color $inverse-color
                            border 5px solid $soundcloud

                    &.-github
                        $github = #24292e
                        background-color $github

                        &:hover
                            color $github
                            background-color $inverse-color
                            border 5px solid $github


#contact
    height 680px

    .contact-form
        width 750px
        margin 70px auto 30px

        > .field
            transition .5s
            display block

            margin 0 auto 20px
            border-radius 5px
            border 3px solid $inverse-color

            color $color
            background-color $inverse-color
            font-size 2.2rem

        > .inputfield
            width 100%
            padding 15px 30px

            &:focus
                border 3px solid #58BE89

        > .submit
            width 180px
            height 50px

            &:hover
                opacity .8
