@charset "UTF-8"

@import "../../static/reset.css"
@import "./base"

$color = #666666
$inverse-color = #ffffff

.container
    width 960px
    margin 0 auto

.inverse
    color $inverse-color
    background-color $color

.main
    height 680px

    & .page-navigator
        float right
        font-size 2.4rem

        &::after
            clear both

        > .menu
            list-style none

            > li
                display inline-block
                padding 10px 20px
                text-align center

                &:hover
                    color $color
                    background-color $inverse-color

    & .company-name
        padding-top 180px
        width 50%
        margin-left auto

        > .title
            font-size 9.2rem
            text-align right
            letter-spacing 7px

            > .-accent
                color #F20002

        > .lead
            margin-top 50px
            font-size 2.4rem
            text-align center


.content-section
    &::before
        content '\00226B'
        display block
        margin -42px auto 0

        height 84px
        width 84px
        border-radius 100%
        transform rotate(90deg)

        font-size 4.8rem
        line-height 78px
        text-align center

        background-color $inverse-color
        z-index 1
